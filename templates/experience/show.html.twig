{% extends 'base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
<div class="mt-5 ml-5">
    <h1>Experience</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ experience.Entreprise }}</td>
            </tr>
            <tr>
                <th>Poste</th>
                <td>{{ experience.Poste }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ experience.Description }}</td>
            </tr>
