{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Diplome</th>
                <th>Ecole</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.Diplome }}</td>
                <td>{{ formation.Ecole }}</td>
                <td>{{ formation.Date ? formation.Date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('formation_show', {'id': formation.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}"><i class="fas fa-user-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin') }}"><i class="fas fa-arrow-circle-left"></i></a>
    <a href="{{ path('formation_new') }}"><i class="fas fa-plus-circle"></i></a>
    
{% endblock %}
