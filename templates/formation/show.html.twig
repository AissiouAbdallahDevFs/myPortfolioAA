{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
<div class="mt-5 ml-5">
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Diplome</th>
                <td>{{ formation.Diplome }}</td>
            </tr>
            <tr>
                <th>Ecole</th>
                <td>{{ formation.Ecole }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ formation.Date ? formation.Date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('formation_index') }}">back to list</a>

    <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formation/_delete_form.html.twig') }}
